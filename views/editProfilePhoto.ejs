<!DOCTYPE html>
<html>

    <%- include('./partials/head') %>

    <body>
        <%- include('./partials/nav') %>

        <div class="after-navbar">

            <h1 class="text-center mb-2">Update Profile Picture</h1>
            
            <form method="POST" action="/user/<%=user.user_id%>/dashboard/editprofilephoto?_method=PATCH" enctype="multipart/form-data">
                <div class="col-md-5  m-auto">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row edit-form">
                                <div class="col-sm-3">
                                    <h6>Upload</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="file"  accept="image/gif, image/jpeg, image/png, image/jpg, image/webp, image/svg" name="newImage" id="file">
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="row mt-3" >
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-info">Save Changes</button>
                                        <a href='/user/<%=user.user_id%>/dashboard/'><button type="button" class="btn btn-info" style="background-color: lightgreen;">Go Back Without Saving</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </body>

    <%- include('./partials/footer') %> 
    
</html>

