<!DOCTYPE html>
<html>
    <%- include('./partials/head') %>
    <body>

      <%- include('./partials/nav') %>
      <%- include('./partials/alerts') %>
        <div class="row after-navbar">
            <div class="col-md-6 m-auto">
              <div class="card card-body">
                <h1 class="text-center mb-3">Login</h1>
                <form action="/user/login" method="POST">
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="form-control"
                      placeholder="Enter Email"
                    />
                  </div>
                  <div class="form-group" style="margin-top: 10px;">
                    <label for="password">Password</label>
                    <input
                      type="password"
                      id="password"
                      name="password"
                      class="form-control"
                      placeholder="Enter Password"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary btn-block " style="margin-top: 5px;">Login</button>
                </form>
                <p class="lead mt-4">
                  No Account? <a href="/user/register">Register Here</a>
                </p>
                <p class="lead mt-4">
                  Forgot Password? <a href="/user/forgot-password">Click Here to Reset Password</a>
                </p>
              </div>
            </div>
          </div>
    </body>

    <%- include('./partials/footer') %> 

</html>